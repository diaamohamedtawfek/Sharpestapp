<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:textColor="@color/colorApp"
            android:textColorHint="@color/colorApp"
            android:id="@+id/text_name_partlist_Home"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="more" />



<!--        android:background="@drawable/textback"-->
        <TextView
            android:drawableLeft="@drawable/ic_keyboard_backspace_black_24dp"
            android:id="@+id/text_all_Prodect_partlist_Home"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textSize="14dp"
            android:textColor="#fff"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="15dp"
           />
<!--        android:text="كل المنتجات"-->
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:id="@+id/recycal_allcatigry"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>



    <View
        android:visibility="invisible"
        android:id="@+id/view_designlistilist"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="#000"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        />

</LinearLayout>