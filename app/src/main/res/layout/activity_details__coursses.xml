<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:paddingBottom="33dp"
    tools:context=".UI.Details_CourssesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/image_detiless_coursses"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@mipmap/sharpest_logo"
            />


<!--        android:fontFamily="@font/tajawalbold"-->
        <TextView
            android:id="@+id/text_type_onlineor_detilesCourse"
            android:paddingRight="11dp"
            android:paddingLeft="11dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="online"
            android:textColor="#000"
            android:gravity="center"
            android:background="@drawable/busin1"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="19dp"
            android:layout_gravity="center|left"
            />


<!--        تفاصيل الكورس"-->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_detales"
            app:cardMaxElevation="4dp"
            android:layout_marginTop="17dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#99b73c"
                    android:lineSpacingExtra="7sp"
                    android:gravity="end"
                    android:text="التفاصيل"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/recycal_detilelsCource_detielscorce"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!--         ofger-->
        <androidx.cardview.widget.CardView
            android:id="@+id/linear_ofer"
            android:layout_marginTop="17dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="1dp"
            app:cardElevation="4dp"
            >
        <LinearLayout
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginRight="11dp"
                android:text="قيمه العرض"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="@color/colorApp"
                />


            <TextView
                android:layout_gravity="right"
                android:gravity="right"
                android:id="@+id/offer_price_detalesProdect"
                android:layout_marginRight="11dp"
                android:text=" "
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="@color/colorTextDetals2"
                />

        </LinearLayout>

        </androidx.cardview.widget.CardView>

<!--        "نبذة عن الدورة-->
        <androidx.cardview.widget.CardView
            android:layout_marginTop="17dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="1dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_margin="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#99b73c"
                    android:lineSpacingExtra="7sp"
                    android:gravity="end"
                    android:text="تفاصيل الدورة"
                    />

            <TextView
                android:padding="15dp"
                android:id="@+id/text_description_detielse_corsess"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#000000"
                android:lineSpacingExtra="4sp"
                android:gravity="end"
                android:text=""
                />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


<!--        ماذا ستتعلم ؟-->
        <androidx.cardview.widget.CardView
            android:layout_marginTop="17dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="1dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/colorApp"
                    android:lineSpacingExtra="7sp"
                    android:gravity="end"
                    android:padding="9dp"
                    android:text="محتوي الدورة "
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/recycal_youlearn_detielscorce"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


<!--        "محتوى الدورة"-->
        <androidx.cardview.widget.CardView
            android:layout_marginTop="17dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="1dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/colorApp"
                    android:lineSpacingExtra="7sp"
                    android:gravity="end"
                    android:padding="9dp"
                    android:text="محتوى الدورة"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/recycal_contentCourses_detielscorce"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/text_mustaddphone"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_gravity="center|left"
            android:gravity="center|right"
            android:layout_marginTop="27dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@android:color/holo_red_dark"
            android:lineSpacingExtra="5sp"
            android:text="يجب اضافه رقم هاتف به واتس اب"
            />

        <TextView
            android:id="@+id/promocode_cource"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:layout_marginTop="27dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/colorApp"
            android:lineSpacingExtra="5sp"
            android:text="استخدام كوبون الخصم"
            />

        <LinearLayout
            android:id="@+id/addrequest_curce"
            android:background="@drawable/busin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="35dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="35dp"
            >
            <TextView
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="8sp"
                android:text="إحجز الأن"
                />

        </LinearLayout>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>